@model Hospital_Management2.Models.HabitacionModel

@{
    ViewData["Title"] = "Create";
}

<h1>Crear nueva habitación</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div asp-validation-summary="ModelOnly"></div>

            <form asp-action="Create" onsubmit="return confirmAction();">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="NumeroHabitacion" class="form-label">Numero de habitacion: </label>
                    <input asp-for="NumeroHabitacion" type="text" class="form-control" />
                    <span asp-validation-for="NumeroHabitacion" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="TipoHabitacion" class="form-label">Tipo de habitacion: </label>
                    <input asp-for="TipoHabitacion" type="text" class="form-control" />
                    <span asp-validation-for="TipoHabitacion" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="EstadoHabitaciones" class="form-label">Estado de habitaciones: </label>
                    <input asp-for="EstadoHabitaciones" type="text" class="form-control" />
                    <span asp-validation-for="EstadoHabitaciones" class="text-danger"></span>
                    <button type="submit" class="btn btn-primary">Aceptar</button>
                    <a href="@Url.Action("Index", "Habitacion")" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js"></script>

    <script>
        function confirmAction() {
            if (confirm('¿Estás seguro de agregar esta Habitacion?')) {
                return true; // Si el usuario hace clic en "Aceptar", el formulario se envía al servidor
            } else {
                window.location.href = '@Url.Action("Index", "Habitacion")'; // Redirigir al usuario al índice si hace clic en "Cancelar"
                return false; // Devolver false para cancelar el envío del formulario
            }
        }
    </script>
}
